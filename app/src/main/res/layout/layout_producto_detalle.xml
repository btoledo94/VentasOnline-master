<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_ui"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/layout_producto_detalle_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_producto_detalle_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$500.00"
                android:textSize="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/layout_producto_detalle_fecha_ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 01 / 01 / 01"/>

    <TextView
        android:id="@+id/layout_producto_detalle_Marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SONY"/>

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_vuelo_detalle_tiempo_vuelo"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="11 horas 56 minutos"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>-->

    <TextView
        android:id="@+id/layout_producto_detalle_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descripcion"
        android:layout_marginTop="10dp"/>

</LinearLayout>